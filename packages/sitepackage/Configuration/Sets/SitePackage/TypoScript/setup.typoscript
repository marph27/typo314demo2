# ------------------- Bodytags integrieren ------------------- #
[traverse(page, "uid") == 1]
page.bodyTag = <body class="startseite">
#[page["layout"] == 2]
#page.bodyTag = <body class="twocolumns-ohne">
[end]

page = PAGE
page {
    typeNum = 0

    10 = PAGEVIEW
    10 {
        paths {
            # Varibale kommt aus settings.yaml
            100 = {$page.pageview.paths}
        } 
        variables {
            copyright = TEXT
            copyright {
                data = date:U
                strftime = %Y
            }
        }
    }

    meta {
        viewport = {$page.meta.viewport}
        robots = {$page.meta.robots}
        apple-mobile-web-app-capable = {$page.meta.apple-mobile-web-app-capable}
        description = {$page.meta.description}
        description {
            override.field = description
        }
        format-detection = telephone=no
        author = {$page.meta.author}
        author {
            override.field = author
        }
        keywords = {$page.meta.keywords}
        keywords {
            override.field = keywords
        }
        X-UA-Compatible = {$page.meta.compatible}
        X-UA-Compatible {
            attribute = http-equiv
        }

        # OpenGraph Tags
        og:title {
            attribute = property
            field = title
        }
        og:description = {$page.meta.description}
        og:description {
            attribute = property
            field = description
        }
        og:site_name {
            value = typo3-14-demo.ddev.site/
            #field = description
        }
    }

    includeCSSLibs {

    }

    includeCSS {
        file10 = EXT:sitepackage/Resources/Public/Css/normalize.css
        file20 = EXT:sitepackage/Resources/Public/Css/grid.css
        file30 = EXT:sitepackage/Resources/Public/Css/basic.css
        file40 = EXT:sitepackage/Resources/Public/Css/rte.css
        file80 = EXT:sitepackage/Resources/Public/Css/menu.css
        file99 = EXT:sitepackage/Resources/Public/Css/mediaqueries.css
        #scrollMagic = EXT:sitepackage/Resources/Public/Css/ScrollMagic.css
        fancybox = EXT:sitepackage/Resources/Public/JavaScript/fancybox/css/jquery.fancybox.css?v=2.1.7
        fancybox.excludeFromConcatenation = 1
        fancybox.disableCompression = 1
        #slick = EXT:sitepackage/Resources/Public/JavaScript/slick/slick.css
        #slicktheme = EXT:sitepackage/Resources/Public/JavaScript/slick/slick-theme.css
    }

    includeJSLibs {
        jquery = https://code.jquery.com/jquery-3.6.4.min.js
        jqueryui = https://code.jquery.com/ui/1.13.2/jquery-ui.min.js
    }

    includeJS {
        fancybox = EXT:sitepackage/Resources/Public/JavaScript/fancybox/js/jquery.fancybox.pack.js?v=2.1.7
        fancybox.excludeFromConcatenation = 1
        fancybox.disableCompression = 1
        fancyboxmedia = EXT:sitepackage/Resources/Public/JavaScript/fancybox/helpers/js/jquery.fancybox-media.js?v=1.0.6
        fancyboxmedia.excludeFromConcatenation = 1
        fancyboxmedia.disableCompression = 1
        # Bei Onlinegang freischalten
        #googleAnalytics = EXT:sitepackage/Resources/Public/JavaScript/GoogleAnalytics.js
        fancyboxStarter = EXT:sitepackage/Resources/Public/JavaScript/fancybox.js
        menu = EXT:sitepackage/Resources/Public/JavaScript/PancakeMenu.js
        #slick = EXT:sitepackage/Resources/Public/JavaScript/slick/slick.min.js
        #pancakeFixing = EXT:sitepackage/Resources/Public/JavaScript/pancakeFixing.js
    }

    includeJSFooterlibs {

    }

    includeJSFooter {

    }

}



################
#### CONFIG ####
################
config {
    contentObjectExceptionHandler = 0
    no_cache = 1
    
    absRefPrefix = auto
    uniqueLinkVars = 1
    pageTitleFirst = 1
    linkVars = L
    prefixLocalAnchors = {$config.prefixLocalAnchors}
    renderCharset = utf-8
    metaCharset = utf-8
    doctype = html5
    removeDefaultJS = {$config.removeDefaultJS}
    inlineStyle2TempFile = 1
    admPanel = {$config.admPanel}
    debug = 0
    cache_period = 86400
    sendCacheHeaders = {$config.sendCacheHeaders}
    intTarget =
    extTarget =
    disablePrefixComment = 1
    #index_enable = 1
    #index_externals = 1
    #index_metatags = 1
    headerComment = {$config.headerComment}
    xmlprologue = none
    xhtml_cleaning = all
    format-detection = telephone=no

    # ------------------- Spam-Protection ------------------- #    
    removeDefaultJS = external
    spamProtectEmailAddresses = 1
    spamProtectEmailAddresses.subStr =  = <span class="at">@</span><span class="hide">no-spam.</span>
    spamProtectEmailAddresses_atSubst = <span class="at">@</span><span class="hide">no-spam.</span>

    // Disable Image Upscaling
    noScaleUp = 1

    // Compression and Concatenation of CSS and JS Files
#    compressJs = 1
#    compressCss = 1
#    concatenateJs = 1
#    concatenateCss = 1
}


# ------------------- Lightbox ------------------- #    
lib.contentElement.settings.media.popup.linkParams.ATagParams.dataWrap = class="fancybox" data-fancybox-group="fancybox[{field:uid}]"

# ------------------- Tabellenklasse ------------------- #    
lib.parseFunc_RTE.externalBlocks.table.stdWrap.HTMLparser.tags.table.fixAttrib.class.list:= addToList(roman-list)


